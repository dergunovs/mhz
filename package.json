{
  "name": "9000mhz",
  "description": "Fake PC hardware store monorepo",
  "version": "0.0.1",
  "keywords": [
    "monorepo",
    "turborepo",
    "typescript",
    "vue",
    "vite",
    "fastify",
    "mongoose",
    "mongodb"
  ],
  "author": "Alexandr Dergunov <dergunovs@mail.ru> (https://github.com/dergunovs)",
  "homepage": "https://9000mhz.ru",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dergunovs/mhz"
  },
  "scripts": {
    "husky": "commitlint --edit $1",
    "staged": "lint-staged",
    "lint": "turbo run lint --no-daemon",
    "ts": "turbo run ts --no-daemon",
    "dev": "turbo run dev --no-daemon",
    "build": "turbo run build --no-daemon",
    "pub": "turbo run build --no-daemon && changeset version && changeset publish",
    "dump": "mongodump --db=mhz --excludeCollection=managers --out=apps/back/dump"
  },
  "dependencies": {
    "@changesets/cli": "2.26.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@turbo/gen": "1.10.12",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "3.0.1",
    "turbo": "1.10.12"
  },
  "packageManager": "npm@9.6.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "npm": "9",
    "node": "18"
  }
}
