{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "build", "public"]
}
