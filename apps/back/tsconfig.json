{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "build"
  },

  "include": ["src"],
  "exclude": ["node_modules", "build", "public"]
}
